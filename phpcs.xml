<?xml version="1.0"?>
<ruleset name="WordPress PHP Standards">
  <description>WordPress coding standards for PHP files, excluding JS, build, vendor, and node_modules folders.</description>

  <!-- Apply WordPress standards -->
  <rule ref="WordPress-Core" />
  <rule ref="WordPress-Docs" />
  <rule ref="WordPress-Extra" />

  <!-- Directories to scan -->
  <file>.</file> <!-- main plugin/theme file -->

  <!-- Only scan PHP files -->
  <arg name="extensions" value="php" />
  <arg name="basepath" value="." />
  <arg name="encoding" value="utf-8" />

  <!-- Exclude unwanted files/folders -->
  <exclude-pattern>**/*.js</exclude-pattern>
  <exclude-pattern>**/node_modules/**</exclude-pattern>
  <exclude-pattern>**/vendor/**</exclude-pattern>
  <exclude-pattern>**/build/**</exclude-pattern>
  <exclude-pattern>**/dist/**</exclude-pattern>
  <exclude-pattern>**/assets/**</exclude-pattern>
  <exclude-pattern>**/*.min.php</exclude-pattern>

  <!-- Optional: show progress and summary -->
  <arg value="p" />
  <arg value="s" />
</ruleset>

